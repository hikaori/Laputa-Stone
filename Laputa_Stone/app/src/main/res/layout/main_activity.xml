<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/laputastone_background"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp">
        <!--android:layout_marginTop="@dimen/margin_medium"-->
        <!--android:layout_marginBottom="@dimen/margin_medium">-->

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Search Place"/>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/place_picker_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#DEA303"
        android:background="#020C3C"
        android:text="SEARCH from MAP"/>

    <TextView
        android:id="@+id/show_selected_place_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"/>

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/laputa_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/assetxxxhdpi"/>

    <TextView
        android:id="@+id/addressErrorMSG"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"/>


</LinearLayout>